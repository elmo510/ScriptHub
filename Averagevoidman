local gui = Instance.new("ScreenGui")
local frame = Instance.new("Frame")
local openCloseButton = Instance.new("TextButton")
local buttons = {}
local content = Instance.new("Frame")

-- Ensure LocalScript compatibility
local player = game.Players.LocalPlayer
if not player then
    warn("This script must run as a LocalScript in the Workspace.")
    return
end

-- Parent the GUI to PlayerGui
gui.Parent = player:WaitForChild("PlayerGui")

-- Configure Open/Close Button
openCloseButton.Parent = gui
openCloseButton.Size = UDim2.new(0.2, 0, 0.05, 0) -- Responsive size
openCloseButton.Position = UDim2.new(0.4, 0, 0, 0) -- Upper center
openCloseButton.Text = "Open"
openCloseButton.BackgroundColor3 = Color3.fromRGB(255, 165, 0) -- Orange
openCloseButton.TextColor3 = Color3.new(0, 0, 0) -- Black text
openCloseButton.Font = Enum.Font.SourceSansBold
openCloseButton.TextScaled = true
openCloseButton.Visible = true

-- Configure Main Frame (Hidden by default)
frame.Parent = gui
frame.Size = UDim2.new(0.9, 0, 0.7, 0) -- 90% of screen width and 70% of screen height
frame.Position = UDim2.new(0.05, 0, 0.15, 0) -- Centered with padding
frame.BackgroundColor3 = Color3.fromRGB(60, 60, 60) -- Dark gray
frame.BorderSizePixel = 5
frame.Visible = false

-- Open/Close Button Functionality
openCloseButton.MouseButton1Click:Connect(function()
    frame.Visible = not frame.Visible
    openCloseButton.Text = frame.Visible and "Close" or "Open"
end)

-- Left Buttons Layout (with new buttons added)
local buttonNames = {
    "Main",
    "Scripts",
    "Supported Executors",
    "Support Me",
    "Credits",
}
for i, name in ipairs(buttonNames) do
    local button = Instance.new("TextButton")
    button.Parent = frame
    button.Size = UDim2.new(0.25, 0, 0.1, 0) -- 25% width and 10% height of the frame
    button.Position = UDim2.new(0.02, 0, 0.12 * (i - 1), 0) -- Evenly spaced vertically
    button.Text = name
    button.BackgroundColor3 = Color3.fromRGB(80, 80, 80) -- Dark gray
    button.TextColor3 = Color3.fromRGB(255, 255, 255) -- White text
    button.Font = Enum.Font.SourceSansBold
    button.TextScaled = true
    button.Name = name
    buttons[name] = button
end

-- Right Content Area (For Dynamic Content)
content.Parent = frame
content.Size = UDim2.new(0.7, 0, 0.85, 0) -- Takes up 70% width and 85% height
content.Position = UDim2.new(0.28, 0, 0.05, 0) -- Positioned next to buttons
content.BackgroundColor3 = Color3.fromRGB(40, 40, 40) -- Darker gray

-- Helper Function to Clear Content
local function clearContent()
    for _, child in pairs(content:GetChildren()) do
        child:Destroy()
    end
end

-- Function to Create Temporary Notification
local function showNotification(message)
    local notification = Instance.new("TextLabel")
    notification.Parent = gui
    notification.Size = UDim2.new(0.4, 0, 0.1, 0)
    notification.Position = UDim2.new(0.3, 0, 0.4, 0)
    notification.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- Black background
    notification.TextColor3 = Color3.fromRGB(255, 255, 255) -- White text
    notification.Font = Enum.Font.SourceSansBold
    notification.TextScaled = true
    notification.Text = message
    wait(3) -- Show for 3 seconds
    notification:Destroy()
end

-- Scripts Button Functionality
buttons.Scripts.MouseButton1Click:Connect(function()
    clearContent()

    -- Define the script buttons for the "Scripts" section
    local scriptButtons = {
        "Bee Swarm Simulator",
        "Bloxfruits",
        "Sol's RNG",
        "Lumber Tycoon 2",
        "Pet", -- This button will have sub-buttons
        "Fisch",
        "Pls Donate"
    }

    local scriptFunctions = {
        [1] = function()
            showNotification("Bee Swarm Simulator Script Executed!")
            -- Add actual script logic here
        end,
        [2] = function()
            showNotification("Bloxfruits Script Executed!")
            -- Add actual script logic here
        end,
        [3] = function()
            showNotification("Sol's RNG Script Executed!")
            -- Add actual script logic here
        end,
        [4] = function()
            showNotification("Lumber Tycoon 2 Script Executed!")
            -- Add actual script logic here
        end,
        [5] = function() -- Pet Button functionality
            clearContent()
            local petScripts = {"Pets Go", "Pet Sim99"}
            for i, pet in ipairs(petScripts) do
                local petButton = Instance.new("TextButton")
                petButton.Parent = content
                petButton.Size = UDim2.new(0.6, 0, 0.1, 0)
                petButton.Position = UDim2.new(0.2, 0, 0.1 * (i + 1), 0)  -- Adjust for vertical spacing
                petButton.Text = pet
                petButton.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
                petButton.TextColor3 = Color3.fromRGB(255, 255, 255)
                petButton.TextScaled = true
                petButton.MouseButton1Click:Connect(function()
                    showNotification(pet .. " Script Executed!")
                    -- Add actual script logic for each pet script here
                end)
            end
        end,
        [6] = function()
            showNotification("Fisch Script Executed!")
            -- Add actual script logic here
        end,
        [7] = function()
            showNotification("Pls Donate Script Executed!")
            -- Add actual script logic here
        end
    }

    -- Create the buttons for each script
    for i, scriptName in ipairs(scriptButtons) do
        local button = Instance.new("TextButton")
        button.Parent = content
        button.Size = UDim2.new(0.6, 0, 0.1, 0)
        button.Position = UDim2.new(0.2, 0, 0.1 * i, 0)
        button.Text = scriptName
        button.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
        button.TextColor3 = Color3.fromRGB(255, 255, 255)
        button.TextScaled = true
        button.MouseButton1Click:Connect(scriptFunctions[i])
    end
end)

-- Add functionality for other buttons like "Main", "Supported Executors", "Support Me", and "Credits"
buttons["Main"].MouseButton1Click:Connect(function()
    clearContent()
    

 -- Main Button Functionality
buttons.Main.MouseButton1Click:Connect(function()
    clearContent()

    local decal = Instance.new("ImageLabel")
    decal.Parent = content
    decal.Size = UDim2.new(0.5, 0, 0.5, 0) -- 50% width and height of the content
    decal.Position = UDim2.new(0.25, 0, 0.1, 0) -- Centered
    decal.Image = "rbxassetid://139035618094722" -- Replace with your decal ID

    local text = Instance.new("TextLabel")
    text.Parent = content
    text.Size = UDim2.new(0.8, 0, 0.2, 0)
    text.Position = UDim2.new(0.1, 0, 0.7, 0)
    text.Text = "Made by Elmo. For updates, join our server!"
    text.TextColor3 = Color3.fromRGB(255, 255, 255)
    text.Font = Enum.Font.SourceSansBold
    text.TextScaled = true
    text.BackgroundTransparency = 1
end)

    
         -- Supported Executors Functionality
buttons["Supported Executors"].MouseButton1Click:Connect(function()
    clearContent()

    local executors = {"Arceus X", "Fluxus", "Delta", "Codex"}
    for i, executor in ipairs(executors) do
        local label = Instance.new("TextLabel")
        label.Parent = content
        label.Size = UDim2.new(0.8, 0, 0.1, 0)
        label.Position = UDim2.new(0.1, 0, 0.12 * (i - 1), 0)
        label.Text = executor
        label.TextColor3 = Color3.fromRGB(0, 0, 0)
        label.Font = Enum.Font.SourceSansBold
        label.TextScaled = true
        label.BackgroundTransparency = 1
end)

    
    -- Support Me Functionality
buttons["Support Me"].MouseButton1Click:Connect(function()
    clearContent()

    local decal = Instance.new("ImageLabel")
    decal.Parent = content
    decal.Size = UDim2.new(0.5, 0, 0.5, 0)
    decal.Position = UDim2.new(0.25, 0, 0.1, 0)
    decal.Image = "rbxassetid://139035618094722" -- Replace with your support decal ID

    local text = Instance.new("TextLabel")
    text.Parent = content
    text.Size = UDim2.new(0.8, 0, 0.2, 0)
    text.Position = UDim2.new(0.1, 0, 0.7, 0)
    text.Text = "Join the game <Pls Donate> and offline donate to Averagevoidman!"
    text.TextColor3 = Color3.fromRGB(0, 0, 0)
    text.Font = Enum.Font.SourceSansBold
    text.TextScaled = true
    text.BackgroundTransparency = 1
end)

    -- Credits Functionality
buttons.Credits.MouseButton1Click:Connect(function()
    clearContent()

    local text = Instance.new("TextLabel")
    text.Parent = content
    text.Size = UDim2.new(0.8, 0, 0.2, 0)
    text.Position = UDim2.new(0.1, 0, 0.4, 0)
    text.Text = "In development..."
    text.TextColor3 = Color3.fromRGB(0, 0, 0)
    text.Font = Enum.Font.SourceSansBold
    text.TextScaled = true
    text.BackgroundTransparency = 1

end)
