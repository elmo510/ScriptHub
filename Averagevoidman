local gui = Instance.new("ScreenGui")
local frame = Instance.new("Frame")
local buttons = {}
local content = Instance.new("Frame")

-- Parent the GUI to Workspace
gui.Parent = game.Workspace
gui.Name = "CustomGUI" -- Optional: Name the GUI for easier identification

-- Configure Main Frame (Responsive Design)
frame.Parent = gui
frame.Size = UDim2.new(0.8, 0, 0.6, 0) -- Scales to 80% width and 60% height of the screen
frame.Position = UDim2.new(0.1, 0, 0.2, 0) -- Centers the frame
frame.BackgroundColor3 = Color3.new(0.5, 0.5, 0.5)
frame.BorderSizePixel = 5

-- Left Buttons Layout (Responsive Button Design)
local buttonNames = {"Main", "Scripts", "Supported Executors", "Support Me", "Credits"}
for i, name in ipairs(buttonNames) do
    local button = Instance.new("TextButton")
    button.Parent = frame
    button.Size = UDim2.new(0.3, 0, 0.1, 0) -- 30% of the width and 10% of the height of the frame
    button.Position = UDim2.new(0.02, 0, (i - 1) * 0.12, 0) -- Evenly spaced buttons
    button.Text = name
    button.BackgroundColor3 = Color3.new(0.7, 0.7, 0.7)
    button.TextColor3 = Color3.new(0, 0, 0)
    button.TextScaled = true -- Makes text scale to fit the button size
    button.Font = Enum.Font.SourceSansBold -- Clear font for readability
    button.Name = name
    buttons[name] = button
end

-- Right Content Area (Flexible for Content)
content.Parent = frame
content.Size = UDim2.new(0.65, 0, 0.9, 0) -- Occupies 65% of the width and 90% of the height of the frame
content.Position = UDim2.new(0.34, 0, 0.05, 0) -- Positioned to the right of the buttons
content.BackgroundColor3 = Color3.new(0.9, 0.9, 0.9)

-- Helper Function to Clear Content
local function clearContent()
    for _, child in pairs(content:GetChildren()) do
        child:Destroy()
    end
end

-- Main Button Functionality
buttons.Main.MouseButton1Click:Connect(function()
    clearContent()

    local decal = Instance.new("ImageLabel")
    decal.Parent = content
    decal.Size = UDim2.new(0.5, 0, 0.5, 0) -- Scales to 50% width and height of the content area
    decal.Position = UDim2.new(0.25, 0, 0.1, 0) -- Centered
    decal.Image = "rbxassetid://139035618094722" -- Replace with your decal ID

    local text = Instance.new("TextLabel")
    text.Parent = content
    text.Size = UDim2.new(0.8, 0, 0.2, 0)
    text.Position = UDim2.new(0.1, 0, 0.7, 0)
    text.Text = "Made by Elmo. For updates, join our server!"
    text.TextColor3 = Color3.new(0, 0, 0)
    text.TextScaled = true
    text.BackgroundTransparency = 1
end)

-- Scripts Button Functionality
buttons.Scripts.MouseButton1Click:Connect(function()
    clearContent()

    local scriptButtons = {"Bee Swarm Simulator", "Jailbreak", "Pls Donate", "Pet"}
    for i, scriptName in ipairs(scriptButtons) do
        local button = Instance.new("TextButton")
        button.Parent = content
        button.Size = UDim2.new(0.8, 0, 0.1, 0)
        button.Position = UDim2.new(0.1, 0, 0.1 * (i - 1), 0)
        button.Text = scriptName
        button.BackgroundColor3 = Color3.new(0.7, 0.7, 0.7)
        button.TextColor3 = Color3.new(0, 0, 0)
        button.TextScaled = true
        button.Font = Enum.Font.SourceSansBold
        -- Add functionality for each script here (if required)
    end
end)

-- Supported Executors Functionality
buttons["Supported Executors"].MouseButton1Click:Connect(function()
    clearContent()

    local executors = {"Arceus X", "Fluxus", "Delta", "Codex"}
    for i, executor in ipairs(executors) do
        local text = Instance.new("TextLabel")
        text.Parent = content
        text.Size = UDim2.new(0.8, 0, 0.1, 0)
        text.Position = UDim2.new(0.1, 0, 0.1 * (i - 1), 0)
        text.Text = executor
        text.TextColor3 = Color3.new(0, 0, 0)
        text.TextScaled = true
        text.BackgroundTransparency = 1
        text.Font = Enum.Font.SourceSansBold
    end
end)

-- Support Me Functionality
buttons["Support Me"].MouseButton1Click:Connect(function()
    clearContent()

    local decal = Instance.new("ImageLabel")
    decal.Parent = content
    decal.Size = UDim2.new(0.5, 0, 0.5, 0)
    decal.Position = UDim2.new(0.25, 0, 0.1, 0)
    decal.Image = "rbxassetid://139035618094722" -- Replace with your support decal ID

    local text = Instance.new("TextLabel")
    text.Parent = content
    text.Size = UDim2.new(0.8, 0, 0.2, 0)
    text.Position = UDim2.new(0.1, 0, 0.7, 0)
    text.Text = "Join the game <Pls Donate> and offline donate to Averagevoidman!"
    text.TextColor3 = Color3.new(0, 0, 0)
    text.TextScaled = true
    text.BackgroundTransparency = 1
    text.Font = Enum.Font.SourceSansBold
end)

-- Credits Functionality
buttons.Credits.MouseButton1Click:Connect(function()
    clearContent()

    local text = Instance.new("TextLabel")
    text.Parent = content
    text.Size = UDim2.new(0.8, 0, 0.2, 0)
    text.Position = UDim2.new(0.1, 0, 0.4, 0)
    text.Text = "In development..."
    text.TextColor3 = Color3.new(0, 0, 0)
    text.TextScaled = true
    text.BackgroundTransparency = 1
    text.Font = Enum.Font.SourceSansBold
end)

-- Reset Button Colors
for _, button in pairs(buttons) do
    button.MouseButton1Click:Connect(function()
        for _, otherButton in pairs(buttons) do
            otherButton.BackgroundColor3 = Color3.new(0.7, 0.7, 0.7)
        end
        button.BackgroundColor3 = Color3.new(0.5, 0.5, 0.5)
    end)
end
